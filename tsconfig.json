{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/app": ["./app"],
      "@/app/*": ["./app/*"],

      "@/pages": ["./pages"],
      "@/pages/*": ["./pages/*"],

      "@/widgets/*": ["./widgets/*"],

      "@/features/*": ["./features/*"],

      "@/entities/*": ["./entities/*"],

      "@/shared/*": ["./shared/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
